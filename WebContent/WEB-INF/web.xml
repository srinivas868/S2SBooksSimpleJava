  <servlet-mapping>  
    <servlet-name>Books Info Manager REST Service</servlet-name>
    <url-pattern>/sell/rest/*</url-pattern>  
  </servlet-mapping>
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
    </jsp-property-group>
  </jsp-config>
